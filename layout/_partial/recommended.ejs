<% 
  // 调用 helper 获取推荐文章
  var posts = typeof recommended_posts_full === 'function' ? recommended_posts_full(page, 4) : [];
%>

<% if (posts && posts.length > 0) { %>
<div class="recommended-section">
  <div class="section-divider">
    <div class="divider-line"></div>
    <div class="divider-text"><span><%- __('post.recommended_posts') || 'Recommended Posts' %></span></div>
  </div>
  <h2 class="section-title"><%- __('post.recommended_posts') || 'Recommended Posts' %></h2>

  <div class="recommended-posts">
    <% posts.forEach(function(link, idx) { %>
      <%
        var bgColors = ['#6a89cc, #4a69bd', '#e55039, #eb2f06', '#3dc1d3, #0fb9b1', '#f6b93b, #e55039'];
        var avatarColors = ['#4a69bd', '#e55039', '#3dc1d3', '#f6b93b'];
        var readingTime = link.minutes || link.reading_time || (link.symbols_count_time && link.symbols_count_time.mins) || '阅读';
        var desc = link.description || (link.excerpt ? striptags(link.excerpt) : '') || (link.content ? striptags(link.content) : '');
        var excerpt = desc || '点击查看推荐内容。';
        var authorName = link.author || link.author_name || link.author_id || '本站作者';
        var authorTitle = link.author_title || '原创文章';
      %>
      <div class="post-card">
        <div class="site-tag">站内</div>
        <div class="card-header" style="background: linear-gradient(135deg, <%= bgColors[idx % bgColors.length] %>);">
          <div class="reading-time">
            <i class="fas fa-clock"></i>
            <%= readingTime %>分钟
          </div>
        </div>
        <div class="card-content">
          <h4 class="post-title">
            <a href="<%- url_for(link.path) %>"><%- link.title %></a>
          </h4>
          <p class="post-excerpt">
            <%- truncate(excerpt, { length: 80 }) %>
          </p>
          <div class="author">
            <div class="author-avatar" style="background: <%= avatarColors[idx % avatarColors.length] %>;">
              <%= idx + 1 %>
            </div>
            <div class="author-info">
              <div class="author-name"><%- authorName %></div>
              <div class="author-title"><%- authorTitle %></div>
            </div>
          </div>
        </div>
      </div>
    <% }); %>
  </div>
</div>

<style>
.recommended-section {
  margin-top: 60px;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}
.section-divider {
  position: relative;
  margin: 60px 0;
}
.divider-line {
  height: 1px;
  background: linear-gradient(90deg, transparent, #6a89cc, transparent);
}
.divider-text {
  position: absolute;
  top: -10px;
  left: 50%;
  transform: translateX(-50%);
  background: white;
  padding: 0 15px;
}
.divider-text span {
  color: #6a89cc;
  font-size: 14px;
  font-weight: 600;
  letter-spacing: 1px;
}
.section-title {
  text-align: center;
  margin-bottom: 30px;
  color: #2c3e50;
}
.recommended-posts {
  display: flex;
  flex-wrap: wrap;
  gap: 25px;
  justify-content: center;
}
.post-card {
  position: relative;
  min-width: 250px;
  max-width: 300px;
  background: #f8f9fa;
  border-radius: 10px;
  overflow: hidden;
  box-shadow: 0 3px 10px rgba(0,0,0,0.08);
  transition: transform 0.3s, box-shadow 0.3s;
  display: flex;
  flex-direction: column;
  min-height: 260px;
}
.post-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 20px rgba(0,0,0,0.12);
}
.card-header {
  height: 60px;
  position: relative;
}
.reading-time {
  position: absolute;
  top: 10px;
  right: 10px;
  background: rgba(255,255,255,0.2);
  color: white;
  padding: 5px 10px;
  border-radius: 20px;
  font-size: 12px;
}
.card-content {
  padding: 20px;
  display: flex;
  flex-direction: column;
  height: calc(100% - 60px);
  justify-content: space-between;
}
.post-title {
  margin-top: 0;
  font-size: 1.2em !important;
  line-height: 1.4;
  color: #2c3e50;
}
.post-title a {
  color: inherit;
  text-decoration: none;
  transition: color 0.2s;
}
.post-title a:hover {
  color: #6a89cc;
}
.post-excerpt {
  color: #666;
  font-size: 14px;
  line-height: 1.6;
  margin: 10px 0;
  overflow: hidden;
}
.author {
  display: flex;
  align-items: center;
}
.author-avatar {
  width: 30px;
  height: 30px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-weight: bold;
  margin-right: 10px;
}
.author-name {
  font-weight: 600;
  font-size: 14px;
}
.author-title {
  font-size: 12px;
  color: #888;
}
@media (max-width: 768px) {
  .recommended-posts {
    flex-direction: column;
    align-items: center;
  }
  .post-card {
    min-width: 100%;
    max-width: 100%;
  }
}
.site-tag {
  position: absolute;
  top: 0;
  left: 0;
  background-color: rgba(42, 170, 138, .90);
  color: white;
  font-size: 12px;
  font-weight: bold;
  padding: 4px 8px;
  border-radius: 0 0 8px 0;
  z-index: 2;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}
</style>
<% } %>